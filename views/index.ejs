<%- include('./partials/user' , {url: `${user.id}`}) %>
<h2 class="page-header">Recently added by <%=user.username%></h2>

<div class="cards-container">
    <% books.forEach(book => {%>
      <div class="card">
        <a href="/files/books/<%=book.id%>">
          <% if(book.coverImagePath) { %>
            <img src="<%= book.coverImagePath %>">
          <% } else { %>
            <img src="/book.png">
          <% } %>
          <div class="container">
            <h4><b><%=book.title %></b></h4> 
          </div>
        </a>    
      </div>
    <%})%>
  </div>