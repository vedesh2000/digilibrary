<h2 class="page-header"><%= book.title %></h2>
<div class="card">
    <a href="/files/books/<%=book.id%>">
        <% if(book.coverImagePath) { %>
        <img src="<%= book.coverImagePath %>">
        <% } else { %>
        <img src="/book.png">
        <% } %>
    </a>    
</div>
<div>Author : <%=book.author.name %></div>
<div>Publish Date : <%=book.publishDate.toDateString() %></div>
<div>Page Count : <%=book.pageCount %></div>
<div>Book Type :
    <% if(book.type === "book") { %>
         Book
    <% } else { %>
         E-Book
        <%if(book.driveLink) {%>
        <div>Drive Link :
            <a href="<%=book.driveLink%>">Drive Link</a>
        </div>
        <% } %>
    <%}%>
</div>
<div>Book Progress :
    <% if(book.progress === "inProgress") { %>
         In Progress
    <% } else if(book.progress === "completed") { %>
         Completed
    <% } else { %>
         Yet to Start
    <%}%>
</div>
<div>Description : <%=book.description %></div>
<div>Last Modified At : <%=book.lastModifiedAt.toDateString() %></div>
<div>Last Opened At : : <%=book.lastOpenedAt.toDateString() %></div>
<div>Created At : <%=book.createdAt.toDateString() %></div>
<div>Modification Times : <%=book.version %></div>

<a href="/files/books/<%= book.id%>/edit">Edit</a>
<%- include('../partials/deleteForm' , {url: `/files/books/${book.id}` , buttonName: "Delete"}) %>
<a href="/files/authors/<%= book.author.id%>/">View Author</a>