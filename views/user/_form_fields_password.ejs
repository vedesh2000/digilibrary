<% if (isPassword) {%>
  <div class="form-row">
    <div class="form-item">
      <label>Old Password</label>
      <input type="password" name="oldpassword" id="myInput1" required>
    </div>
  </div>
<% } %>
<div class="form-row">
  <div class="form-item">
    <label>New Password</label>
    <input type="password" name="newpassword" id="myInput2" required>
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label>Confirm New Password</label>
    <input type="password" name="confirmpassword" id="myInput3" required>
  </div>
</div>

<% if (isPassword) {%>
  <label for="showPasswords">Show Passwords</label>
  <input type="checkbox" id="showPasswords" onclick="myFunction1()">
<% } else {%>
  <label for="showPasswords">Show Passwords</label>
  <input type="checkbox" id="showPasswords" onclick="myFunction2()">
<% } %>
<br/>
<br/>
<script>
  function myFunction1() {
      var x = document.getElementById("myInput1");
      var y = document.getElementById("myInput2");
      var z = document.getElementById("myInput3");
      if (x.type === "password") {
        x.type = "text";
        y.type = "text";
        z.type = "text";
      } else {
        x.type = "password";
        y.type = "password";
        z.type = "password";
      }
    }
    function myFunction2() {
      var y = document.getElementById("myInput2");
      var z = document.getElementById("myInput3");
      if (y.type === "password") {
        y.type = "text";
        z.type = "text";
      } else {
        y.type = "password";
        z.type = "password";
      }
    }
</script>