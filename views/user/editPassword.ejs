
<% if (isPassword) {%>
    <h2 class="page-header">Update Password</h2>
<% } else { %>
    <h2 class="page-header">Set Password</h2>
<% } %>
<form action="/user/editPassword/<%= user.id %>?_method=PUT" method="POST">
    <%- include('_form_fields_password') %>
    <a class="btn btn-danger" href="/user/">Cancel</a>
    <button class="btn btn-primary" type="submit">Update</button>
</form>
