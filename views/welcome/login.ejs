<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/main.css">
    <title>Login</title>
  </head>
  
  <script>
    function myFunction() {
      var x = document.getElementById("myInput");
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password";
      }
    }
  </script>

  <body>
    <div class="center-form">
      <h3>Login Page</h3>
      <div style="color: red;">
        <% if(err !=null) {%>
          <%= err%>
            <% }%>
      </div>
      <div style="color: black;">
        <% if(msg !=null) {%>
          <%= msg%>
            <% }%>
      </div>
      <form action="/login" method="POST">
        <div class="form-row">
          <div class="form-item">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Enter Email" required autocomplete="on"/>
          </div>
        </div>
        <div class="form-row">
          <div class="form-item">
            <label for="myInput">Password:</label>
            <input type="password" name="password" id="myInput" placeholder="Enter Password" required autocomplete="on"/>
          </div>
        </div>
        <div class="form-row">
          <div class="inline-check-box">
            <label for="showPassword">Show Password</label>
            <input type="checkbox" id="showPassword" name="showPassword" onclick="myFunction()">
          </div>
        </div>
        <div class="form-row">
          <div class="inline-check-box">
            <label for="rememberme">Remember me</label>
            <input type="checkbox" name="rememberme" id="rememberme">
          </div>
        </div>
        <div class="form-row">
          <div class="form-item">
            <div class="btn-group">
              <button class="btn btn-primary" type="submit">Login</button>
              <a class="btn btn-primary" href="/signup">Signup</a>
              <a class="btn btn-primary" href="/forgotPassword">Forgot Password</a>
              <a class="btn btn-primary" href="/">Welcome Page</a>
            </div>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>